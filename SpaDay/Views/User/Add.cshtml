@using SpaDay.ViewModels
@model AddUserViewModel

<h1>User Sign Up Form</h1>

@if (ViewBag.error != null)
{
    <p id="error-message">@ViewBag.error</p>
}

<form method="post">
    <div>
        <label asp-for="Username"></label>
        <input asp-for="Username" value="@Model.Username" />
        <span asp-validation-for="Username"></span>
    </div>
    <br />
    <div>
        <label asp-for="Email"></label>
        <input asp-for="Email" value="@Model.Email" />
        <span asp-validation-for="Email"></span>
    </div>
    <br />
    <div>
        <label asp-for="Password"></label>
        <input asp-for="Password" type="password" value="@Model.Password"/>
        <span asp-validation-for="Password"></span>
    </div>
    <br />
    <div>
        <label asp-for="VerifyPassword"></label>
        <input asp-for="VerifyPassword" type="password" />
        <span asp-validation-for="VerifyPassword"></span>
    </div>
    <br />
    <input type="submit" name="submit" value="Sign Up!" />
</form>
